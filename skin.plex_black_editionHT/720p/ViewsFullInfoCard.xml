			<width>310</width>
			<height>20</height>
			<align>left</align>
			<posy>64</posy>
			<orientation>horizontal</orientation>
			<itemgap>5</itemgap>
			<control type="label">
				<width min="0" max="150">auto</width>
				<height>17</height>
				<label>$INFO[ListItem.Year]</label>
				<font>smallCaps</font>
				<scroll>false</scroll>
				<textcolor>title2</textcolor>
				<wrapmultiline>false</wrapmultiline>
				<visible>!Container.PlexContent(Seasons)</visible>
			</control>
			<control type="label">
				<width min="0" max="150">auto</width>
				<height>17</height>
				<label>$INFO[ListItem.episode,&#xB7; , $LOCALIZE[20360]]</label>
				<font>smallCaps</font>
				<scroll>false</scroll>
				<textcolor>title2</textcolor>
				<wrapmultiline>false</wrapmultiline>
				<visible>!Container.PlexContent(Seasons)</visible>
			</control>
			<control type="label">
